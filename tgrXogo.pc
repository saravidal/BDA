int errorManager(int salir){
	EXEC SQL WHENEVER SQLERROR CONTINUE;

	printf("\nError: %s\n",
      	sqlca.sqlerrm.sqlerrmc);
    
    	if(salir == 1){
       		exit(-1);
	}
	return -1;
}

int errorManager_DML(int salir)
{
	EXEC SQL WHENEVER SQLERROR CONTINUE;

	printf("\nError: %s\n",
      	sqlca.sqlerrm.sqlerrmc);
    
	EXEC SQL ROLLBACK;
	
    	if(salir == 1){
       		exit(-1);
	}
	return -1;
}

